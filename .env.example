# Database
# Note: Connection pooling parameters are added for production reliability:
# - connection_limit: Maximum number of connections in the pool (adjust based on your DB plan)
# - pool_timeout: How long to wait for a connection before timing out (in seconds)
# - connect_timeout: How long to wait for initial connection (in seconds)
# If your password contains special characters (@, #, etc.), URL-encode them
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?connection_limit=10&pool_timeout=20&connect_timeout=30"
# Optional direct URL (needed only if using a Prisma schema that declares directUrl)
# DIRECT_DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Redis (queue + rate limiting)
# Preferred:
# REDIS_URL="redis://:password@redis-host:6379/0"
# Or host/port style (the app will build REDIS_URL automatically):
# REDIS_HOST="redis-host"
# REDIS_PORT="6379"
# REDIS_PASSWORD=""
# REDIS_DB="0"
# REDIS_TLS="false"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"
AUTH_SECRET="your-secret-key-here"
AUTH_TRUST_HOST="true"

# Wasabi S3-Compatible Storage
WASABI_ENDPOINT="s3.us-west-1.wasabisys.com"
WASABI_REGION="us-west-1"
WASABI_ACCESS_KEY_ID="your-wasabi-access-key"
WASABI_SECRET_ACCESS_KEY="your-wasabi-secret-key"
WASABI_BUCKET="your-bucket-name"

# Bunny.net CDN
BUNNY_CDN_URL="https://your-pull-zone.b-cdn.net"
BUNNY_API_KEY="your-bunny-api-key"
BUNNY_STORAGE_ZONE="your-storage-zone-name"

# Email Configuration (for SMTP)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@example.com"

# ============================================
# AI PROVIDER CONFIGURATION (At least ONE required)
# ============================================

# Google AI (Gemini) - PRIMARY PROVIDER - Get from https://aistudio.google.com/app/apikey
# This is the DEFAULT provider for all AI features
GOOGLE_AI_API_KEY="AIza-your-gemini-api-key"
# Use aliases/env-driven model selection to avoid code changes when models rotate.
# You can keep GEMINI_DEFAULT_MODEL for backward compatibility, but GEMINI_TEXT_MODEL is preferred.
GEMINI_TEXT_MODEL="googleai/gemini-flash-latest"
GEMINI_IMAGE_MODEL="googleai/gemini-2.5-flash-image"
GEMINI_VIDEO_MODEL="googleai/veo-3.0-generate-001"
IMAGEN_IMAGE_MODEL="googleai/imagen-4.0-generate-001"
GEMINI_DEFAULT_MODEL="gemini-flash-latest"
GEMINI_FALLBACK_MODEL="gemini-2.5-flash-lite"

# OpenAI - FALLBACK PROVIDER - Get from https://platform.openai.com/api-keys
# Used when Gemini is unavailable or quota exceeded
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_DEFAULT_MODEL="gpt-4o"
OPENAI_FALLBACK_MODEL="gpt-3.5-turbo"

# Anthropic (Claude) - SECONDARY FALLBACK - Get from https://console.anthropic.com/
# Used when both Gemini and OpenAI are unavailable
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key"
ANTHROPIC_DEFAULT_MODEL="claude-3-5-sonnet-20241022"
ANTHROPIC_FALLBACK_MODEL="claude-3-haiku-20240307"

# Provider Priority Order (comma-separated, first = highest priority)
# Gemini is DEFAULT, OpenAI is first fallback, Anthropic is second fallback
AI_PROVIDER_PRIORITY="gemini,openai,anthropic"

# Circuit Breaker Settings
CIRCUIT_BREAKER_THRESHOLD="5"
CIRCUIT_BREAKER_TIMEOUT="60000"

# ============================================
# OTHER AI/MEDIA PROVIDERS
# ============================================

